<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="cz.cuni.mff.ufal.textan.data.tables.ObjectTable" table="Object">
      <meta attribute="class-description">
         Entity itself 
      </meta>
      <id 
          name="id" 
          type="long" 
          column="id_object"
          unsaved-value="0">
         <generator class="native" />
      </id>  
      
       <property name="data" column="data" type="string"/>
       <property name="globalVersion" column="globalversion" type="long" />
       
       <many-to-one name="objectType" class="cz.cuni.mff.ufal.textan.data.tables.ObjectTypeTable" 
                    column="id_object_type" not-null="true" lazy="false" cascade="save-update" />
       <set name="aliases" table="Alias" inverse="true" cascade="delete, delete-orphan">
            <key>
                <column name="id_object"></column>
            </key>
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.AliasTable"></one-to-many>
        </set>
        <set name="relations" table="IsInRelation" inverse="true" cascade="delete, delete-orphan">
            <key>
                <column name="id_object"></column>
            </key>
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.InRelationTable" />
        </set>
        
        <one-to-one cascade="delete, delete-orphan" name="newObject" class="cz.cuni.mff.ufal.textan.data.tables.JoinedObjectsTable" property-ref="newObject">
            
        </one-to-one>
       <set name="oldObjects1" table="JoinedObjects" inverse="true" cascade="delete, delete-orphan">
            <key>
                <column name="id_old_object1"></column>
            </key>
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.JoinedObjectsTable"></one-to-many>
        </set>
       <set name="oldObjects2" table="JoinedObjects" inverse="true"  cascade="delete, delete-orphan">
            <key>
                <column name="id_old_object2"></column>
            </key>
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.JoinedObjectsTable"></one-to-many>
        </set>

                
    </class>
    
</hibernate-mapping>
