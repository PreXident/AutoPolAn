<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="cz.cuni.mff.ufal.textan.data.tables.RelationOccurrenceTable" table="RelationOccurrence">
      <meta attribute="class-description">
         Occurrence of a relation in a document. Keeps the position and anchor of the relation.
      </meta>
      <id 
          name="id" 
          type="long" 
          column="id_relation_occurence"
          unsaved-value="0">
         <generator class="native" />
      </id>  
       
       <property name="anchor" column="anchor" type="string"/>
       <property name="position" column="position" type="integer"/>
       
       <many-to-one name="document" class="cz.cuni.mff.ufal.textan.data.tables.DocumentTable" 
                    column="id_document" not-null="true" lazy="false" cascade="save-update" />
       <many-to-one name="relation" class="cz.cuni.mff.ufal.textan.data.tables.RelationTable" 
                    column="id_relation" not-null="true" lazy="false" cascade="save-update"/>
    </class>
    
</hibernate-mapping>
