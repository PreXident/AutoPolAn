<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="cz.cuni.mff.ufal.textan.data.tables.RelationTable" table="Relation">
        <meta attribute="class-description">
            Relation itself 
        </meta>
        <id 
            name="id" 
            type="long" 
            column="id_relation"
            unsaved-value="0">
            <generator class="native" />
        </id>  
        <set name="objectsInRelation" table="isinrelation" cascade="delete, delete-orphan">
            
            <key column="id_relation"/>
                            
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.InRelationTable"/>
        </set>
        <many-to-one name="relationType" class="cz.cuni.mff.ufal.textan.data.tables.RelationTypeTable" 
                    column="id_relation_type" not-null="true" lazy="false" cascade="save-update" />
        
        <set name="occurrences" table="RelationOccurrence" inverse="true" cascade="delete, delete-orphan">
            <key>
                <column name="id_relation"></column>
            </key>
            <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.RelationOccurrenceTable"></one-to-many>
        </set>
    </class>
    
</hibernate-mapping>
