<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="cz.cuni.mff.ufal.textan.data.tables.ObjectTypeTable" table="ObjectType">
      <meta attribute="class-description">
         Type of the object (person, adress, ...) 
      </meta>
      <id 
          name="id" 
          type="long" 
          column="id_object_type"
          unsaved-value="0">
         <generator class="native" />
      </id>  
       <property name="name" column="name" type="string"/>
       <set name="objectsOfThisType"  table="Object" inverse="true" cascade="delete, delete-orphan">
           <key>
               <column name="id_object_type"></column>
           </key>
           <one-to-many class="cz.cuni.mff.ufal.textan.data.tables.ObjectTable"></one-to-many>
       </set>
    </class>
    
</hibernate-mapping>
